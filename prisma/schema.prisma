generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model usuarios {
  usuario_id        Int      @id @default(autoincrement())
  usuario_nome      String
  usuario_email     String
  usuario_senha     String
  usuario_nivel     String
  usuario_criacao   DateTime @default(now())
  usuario_alteracao DateTime @updatedAt
}

model categoria_jogos {
  categoria_jogo_id           Int     @id @default(autoincrement())
  categoria_jogo_area_atuacao String
  categoria_jogos             jogos[]
}

model jogos {
  jogos_id         Int             @id @default(autoincrement())
  jogos_nome       String
  jogos_descricao  String
  jogos_link       String
  jogos_img        String
  jogos_categorias categoria_jogos @relation(fields: [jogos_id], references: [categoria_jogo_id])
}
